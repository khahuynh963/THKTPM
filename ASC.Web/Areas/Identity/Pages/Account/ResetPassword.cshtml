@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container">
    <div class="row">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="card-panel z-depth-3">
                <h4 class="center-align blue-text text-darken-2">@ViewData["Title"]</h4>
                <p class="center-align">Please enter your new password below.</p>
                <div class="row">
                    <form method="post" class="col s12">
                        <div asp-validation-summary="ModelOnly" class="red-text" role="alert"></div>
                        <input asp-for="Input.Code" type="hidden" />

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">email</i>
                                <input asp-for="Input.Email" class="validate" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="helper-text red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock</i>
                                <input asp-for="Input.Password" type="password" class="validate" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.Password">New Password</label>
                                <span asp-validation-for="Input.Password" class="helper-text red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock_outline</i>
                                <input asp-for="Input.ConfirmPassword" type="password" class="validate" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.ConfirmPassword">Confirm New Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="helper-text red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 center-align">
                                <button type="submit" class="btn-large waves-effect waves-light blue darken-2">
                                    Reset Password
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}